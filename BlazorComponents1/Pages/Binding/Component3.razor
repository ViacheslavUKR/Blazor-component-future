@namespace BlazorComponents1.Pages
@using Microsoft.Extensions.Logging
@inject ILogger<Component3> ilogger

<div style="border: 1px solid; background-color:gainsboro; padding: 5px;">
    <div style="font-weight:bold">Component3 (component parameter bind by reserved event's name)</div>

    <button class="btn btn-primary" @onclick="@( async (e) => await Value3Changed.InvokeAsync(e))">
        Reset Value3
    </button>

    <p>@($"Value3={Value3.ClientX},{Value3.ClientY}")</p>
</div>

@code {

    [Parameter]
    public EventCallback<MouseEventArgs> Value3Changed { get; set; }

    [Parameter]
    public MouseEventArgs Value3 { get; set; }
}
